<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/colorPrimaryDark"
    tools:ignore="SpUsage,UnusedAttribute,ContentDescription">


    <ImageView
        android:id="@+id/main_weather_state_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/temperature_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_weather_state_text"
        tools:src="@drawable/ic_w_hail" />

    <TextView
        android:id="@+id/main_weather_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/main_weather_state_img"
        app:layout_constraintStart_toStartOf="@+id/main_weather_state_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Light Cloud" />

    <ImageView
        android:id="@+id/temperature_view_text_unit"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        app:layout_constraintStart_toEndOf="@+id/temperature_text"
        app:layout_constraintTop_toTopOf="@+id/temperature_text"
        tools:src="@drawable/ic_w_celsius" />

    <TextView
        android:id="@+id/temperature_view_text_max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:text="38" />

    <TextView
        android:id="@+id/temperature_view_text_min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:text="18" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/temperature_text"
        tools:src="@drawable/ic_arrow_upward_white_36dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/temperature_text"
        app:layout_constraintStart_toEndOf="@+id/temperature_text"
        tools:src="@drawable/ic_arrow_downward_white_36dp" />

    <TextView
        android:id="@+id/temperature_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:textSize="90dp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/main_weather_state_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_weather_state_img"
        tools:text="30" />


    <TextView
        android:id="@+id/visibility_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        tools:text="50 KM"
        android:layout_marginLeft="6dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        tools:text="Visibility" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="@+id/temperature_text"
        app:layout_constraintTop_toBottomOf="@+id/temperature_text"
        tools:src="@drawable/ic_visibility_white_48dp" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:paddingTop="5dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="@+id/main_weather_state_img"
        app:layout_constraintTop_toBottomOf="@+id/main_weather_state_img"
        tools:src="@drawable/vector_drawable_wi_raindrops" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        tools:text="Humidity" />

    <TextView
        android:id="@+id/humidity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        tools:text="50%" />

    <com.github.ahmadnemati.wind.WindView
        android:id="@+id/windview"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:barometerTickSpacing="9dp"
        app:bigPoleX="38dp"
        app:labelFontSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:numericFontSize="25dp"
        app:poleBottomY="98dp"
        app:pressureLineY="73dp"
        app:pressureTextX="12dp"
        app:pressureTextY="4dp"
        app:smallPoleX="75dp"
        app:windTextX="10dp"
        app:windTextY="29dp" />

</android.support.constraint.ConstraintLayout>